{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/node10/tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "allowJs": true
  }
}